	<script>
		//-----------------------------------------------------------CountDown------------------------------------------------------------------------------------------------
				// Set the date we're counting down to
				var countDownDate = new Date("Nov 25, 2022 15:37:25").getTime();
		
				// Update the count down every 1 second
				var Timer = setInterval(function() {
		
				// Get today's date and time
				var now = new Date().getTime();
					
				// Find the interval between now and the count down date
				var interval = countDownDate - now;
					
				// Time calculations for days, hours, minutes and seconds
				var days = Math.floor(interval / (1000 * 60 * 60 * 24));		//86400(total number of milliseconds in a day)
				var hours = Math.floor((interval % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));		//days/total number of milliseconds in an hour
				var minutes = Math.floor((interval % (1000 * 60 * 60)) / (1000 * 60));		//hours/number of milliseconds in a minute
				var seconds = Math.floor((interval % (1000 * 60)) / 1000);		//minutes/number of seconds
					
				// Output the result in an element with id="demo"
				document.getElementById("countdown").innerHTML = days + "d " + hours + "h " + minutes + "m " + seconds + "s ";
					
				// If the count down is over, write some text 
				if (interval < 0) {
					clearInterval(Timer);
					document.getElementById("countdown").innerHTML = "EXPIRED";
				}
				},1000);
				//https://stackoverflow.com/questions/51078140/calculation-of-countdown-timer#:~:text=var%20days%20%3D%20Math.-,floor(distance%20%2F%20(1000%20*%2060%20*%2060%20*%2024,of%20milliseconds%20in%20a%20day.
		
		//-----------------------------------------------------------------------------------------------------------------------------------------------------------------------
				var coll = document.getElementsByClassName("collapsible");
				var i;
		
				for (i = 0; i < coll.length; i++) {
				coll[i].addEventListener("click", function() {
					this.classList.toggle("active"); 		//toggle - hide/show
					var content = this.nextElementSibling;
					if (content.style.maxHeight){		//maxHeight=0 
					content.style.maxHeight = null;		//maxHeight property sets or returns the maximum height of an element.
					} else {
					content.style.maxHeight = content.scrollHeight + "px";	//scrollHeight-the minimum height the element would require in order to fit all the content in the viewport without using a vertical scrollbar.
					} 
				});
				}
			</script>
		
